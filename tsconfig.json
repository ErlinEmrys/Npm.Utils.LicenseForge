{
	"compilerOptions": {
		"target": "es2017",
		"rootDir": "./src",
		"module": "commonjs",
		"strict": true,
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [ "src/**/*" ],
	"exclude": [ "node_modules", "dist" ]
}
